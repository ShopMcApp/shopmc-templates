<html>

<head>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="min-h-screen bg-black text-gray-300 flex flex-col items-center">
        <div class="w-full max-w-screen-2xl px-4 py-12 flex">
            <div class="flex-1 text-3xl font-extrabold">
                <%= config.name %>
            </div>
            <div class="flex gap-10">
                <a href="#" class="text-xl font-bold">Sklep</a>
                <a href="#" class="text-xl font-bold">Regulamin</a>
                <a href="#" class="text-xl font-bold">Voucher</a>
            </div>
        </div>
        <div class="max-w-screen-2xl w-full p-4 gap-4 flex flex-col lg:flex-row items-center lg:items-start">
            <div class="w-full grid grid-cols-1 gap-4 sm:grid-cols-2 xl:grid-cols-3 h-fit mb-10">
                <% for(let product of config.products) { %>
                    <div class="flex flex-col items-center bg-neutral-800 p-5">
                        <img src="<%= product.icon %>" class="w-32 h-32 mb-4" />
                        <div class="mb-2 text-2xl font-bold">
                            <%= product.name %>
                        </div>
                        <div class="mb-3 text-md h-full">
                            <%= product.description %>
                        </div>
                        <div class="flex items-center gap-4 sm:flex-col">
                            <div class="text-md text-green-700">
                                <%= product.price %> PLN
                            </div>
                            <a class="rounded-sm bg-green-700 p-2 px-10 text-lg uppercase"
                                href="/pl/checkout/<%= customer %>/<%= product.id %>">
                                Kup teraz
                            </a>
                        </div>
                    </div>
                    <% } %>
            </div>
            <div class="w-full max-w-sm flex flex-col gap-4 items-center">
                <button class="rounded-sm bg-green-700 p-2 px-10 text-lg uppercase">Voucher</button>
                <div class="text-xl font-bold">
                    OSTATNIE ZAKUPY
                </div>
                <% for(let order of orders) { %>
                <div class="bg-neutral-800 p-4 w-full h-fit flex gap-4 items-center">
                    <img src="https://shopmc.app/server.png" class="w-16 h-16 ml-12" />
                    <div>
                        <div class="font-extrabold text-lg">
                            xd
                        </div>
                        <div class="text-xs">
                            <%= order.nick %>
                        </div>
                        <div class="text-xs">
                            31.10 20:00
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>